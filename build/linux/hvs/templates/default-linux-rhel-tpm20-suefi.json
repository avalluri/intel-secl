{
    "label": "default-linux-rhel-tpm20-suefi",
    "condition": [
        "//host_info/os_name//*[text()='RedHatEnterprise']",
        "//host_info/hardware_features/TPM/meta/tpm_version//*[text()='2.0']",
        "//host_info/hardware_features/UEFI/meta/secure_boot_enabled//*[text()='true']"
    ],
    "flavor_parts": {
        "PLATFORM": {
            "meta": {
                "tpm_version": "2.0",
                "suefi_enabled": true
            },
            "pcr_rules": [
                {
                    "pcr": {
                        "index": 0,
                        "bank": ["SHA384", "SHA256", "SHA1"]
                    },
                    "pcr_matches": true
                },
                {
                    "pcr": {
                        "index": 2,
                        "bank": ["SHA384", "SHA256", "SHA1"]
                    },
                    "pcr_matches": true
                },
                {
                    "pcr": {
                        "index": 3,
                        "bank": ["SHA384", "SHA256", "SHA1"]
                    },
                    "pcr_matches": true
                },
                {
                    "pcr": {
                        "index": 4,
                        "bank": ["SHA384", "SHA256", "SHA1"]
                    },
                    "pcr_matches": true
                },
                {
                    "pcr": {
                        "index": 6,
                        "bank": ["SHA384", "SHA256", "SHA1"]
                    },
                    "pcr_matches": true
                },
                {
                    "pcr": {
                        "index": 7,
                        "bank": ["SHA384", "SHA256", "SHA1"]
                    },
                    "pcr_matches": true
                }
            ]
        }
    }
}